# Azure Speech Service
AZURE_SPEECH_REGION=brazilsouth
AZURE_SPEECH_KEY=your_speech_key_here

# Azure OpenAI Service
AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com/
AZURE_OPENAI_KEY=your_openai_key_here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Oracle Cloud Infrastructure
OCI_NAMESPACE=your_oci_namespace
OCI_BUCKET=audia-media
OCI_REGION=sa-saopaulo-1
OCI_COMPARTMENT_OCID=ocid1.compartment.oc1..xxxxxxxxxxxxx
OCI_CONFIG_PATH=~/.oci/config
OCI_PROFILE=DEFAULT

# Redis
REDIS_URL=redis://redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# FAISS Vector Store
FAISS_PATH=/app/data/faiss_store

# JWT Authentication
JWT_SECRET_KEY=your_super_secret_key_min_32_characters_long_please_change_this
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database
DATABASE_URL=sqlite:///./data/audia.db

# Application
APP_NAME=Audia
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Upload Limits
MAX_UPLOAD_SIZE_MB=500
MAX_UPLOADS_PER_HOUR=3
ALLOWED_EXTENSIONS=mp3,wav,mp4,m4a,avi,mov,webm

# Rate Limiting
RATE_LIMIT_CHAT=20/minute
RATE_LIMIT_UPLOAD=3/hour

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_TASK_TRACK_STARTED=true
CELERY_TASK_TIME_LIMIT=7200
CELERY_TASK_SOFT_TIME_LIMIT=7000

# Processing
CHUNK_SIZE_TOKENS=512
CHUNK_OVERLAP_TOKENS=50
MAX_CONTEXT_CHUNKS=5

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:8000
